<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/border_no_radius"
    android:orientation="horizontal"
    android:layout_margin="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/slider_picture"
            android:background="@drawable/border_no_radius"
            android:layout_gravity="center"
            android:cropToPadding="true"
            android:padding="3dp"
            android:layout_width="150dp"
            android:layout_height="150dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_no_radius"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/slider_name"
                android:textColor="@android:color/black"
                android:gravity="center|bottom"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="NAME"/>

            <CheckBox
                android:id="@+id/slider_checkbox"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="top"/>

        </LinearLayout>

        <TextView
            android:id="@+id/slider_qualifications"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUALIFICATIONS"/>

        <TextView
            android:id="@+id/slider_specialties"
            android:padding="5dp"
            android:background="@drawable/border_no_radius"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPECIALTIES"/>

        <RatingBar
            android:id="@+id/slider_rating"
            android:isIndicator="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
